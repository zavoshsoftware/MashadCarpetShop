
@model ViewModels.LoginViewModel
@{
    ViewBag.Title = "ورود به حساب کاربری";
    Layout = "~/Views/Shared/FrontEnd/_FronEndLayout.cshtml";
}

<div class="breadcrumb_section bg_gray page-title-mini">
	<div class="container">
		<!-- STRART CONTAINER -->
		<div class="row align-items-center">
			<div class="col-md-6">
				<div class="page-title">
					<h1>ورود</h1>
				</div>
			</div>
			<div class="col-md-6">
				<ol class="breadcrumb justify-content-md-end">
					<li class="breadcrumb-item"><a href="/">خانه</a></li>
					<li class="breadcrumb-item active">ورود</li>
				</ol>
			</div>
		</div>
	</div>
</div>

<div class="main_content">

	<div class="login_register_wrap section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-xl-6 col-md-10">
					<div class="login_wrap">
						<div class="padding_eight_all bg-white">
							<div class="heading_s1">
								<h3>ورود</h3>
							</div>
							@if (TempData["WrongPass"] != null)
							{
								<p class="alert alert-danger" id="wrongEmail">@TempData["WrongPass"]</p>
							}
						@using (Html.BeginForm("Login", "Account", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "panel-body wrapper-lg", role = "form"}))
						{
							<div >
								@Html.AntiForgeryToken()
								@Html.ValidationSummary(false, "", new { @class = "alert-danger" })
								<div class="form-group">
									<input type="text" required="" class="form-control" name="Username" placeholder="شماره موبایل">
								</div>
								<div class="form-group">
									<input class="form-control" required="" type="password" name="Password" placeholder="کلمه عبور">
								</div>
								<div class="login_footer form-group">
									<div class="chek-form">
										<div class="custome-checkbox">
											<input class="form-check-input" type="checkbox" name="checkbox" id="exampleCheckbox1" value="">
											<label class="form-check-label" for="exampleCheckbox1"><span>مرا به خاطر بسپار</span></label>
										</div>
									</div>
									<a href="/forgetpass">فراموشی کلمه عبور</a>
								</div>
								<div class="form-group">
									<button type="submit" class="btn btn-fill-out btn-block" name="login">ورود</button>
								</div>
							</div>
						}

							<div class="different_login">
								<span> یا</span>
							</div>
					 
							<div class="form-note text-center">اگر حساب کاربری ندارید؟ <a href="/register?ReturnUrl=@ViewBag.ReturnUrl">ثبت نام کنید</a></div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>