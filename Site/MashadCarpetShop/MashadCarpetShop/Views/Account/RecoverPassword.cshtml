
@model ViewModels.RecoverPasswordViewModel
@{
    ViewBag.Title = "بازیابی کلمه عبور";
    Layout = "~/Views/Shared/FrontEnd/_FronEndLayout.cshtml";
}

<div class="breadcrumb_section bg_gray page-title-mini">
	<div class="container">
		<!-- STRART CONTAINER -->
		<div class="row align-items-center">
			<div class="col-md-6">
				<div class="page-title">
					<h1>بازیابی کلمه عبور</h1>
				</div>
			</div>
			<div class="col-md-6">
				<ol class="breadcrumb justify-content-md-end">
					<li class="breadcrumb-item"><a href="/">خانه</a></li>
					<li class="breadcrumb-item active">بازیابی کلمه عبور</li>
				</ol>
			</div>
		</div>
	</div>
</div>

<div class="main_content">

	<div class="login_register_wrap section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-xl-6 col-md-10">
					<div class="login_wrap">
						<div class="padding_eight_all bg-white">
							<div class="heading_s1">
								<h3>ورود</h3>
							</div>
							@if (TempData["WrongPass"] != null)
							{
								<p class="alert alert-danger" id="wrongEmail">@TempData["WrongPass"]</p>
							}
							@if (TempData["success"] != null)
							{
								<p class="alert alert-success" id="wrongEmail">@TempData["success"]</p>
							}
						@using (Html.BeginForm("RecoverPassword", "Account", new{}, FormMethod.Post, new {@class = "panel-body wrapper-lg", role = "form"}))
						{
							<div >
								@Html.AntiForgeryToken()
								@Html.ValidationSummary(false, "", new { @class = "alert-danger" })
								<div class="form-group">
									<input type="text"  class="form-control" name="CellNumber" placeholder="شماره موبایل">
								</div>
						 
							 
								<div class="form-group">
									<button type="submit" class="btn btn-fill-out btn-block" name="login">بازیابی کلمه عبور</button>
								</div>
							</div>
						}

							<div class="different_login">
								<span> یا</span>
							</div>
					 
							<div class="form-note text-center">اگر کلمه عبور برای شما پیامک شد <a href="/login">جهت ورود به وب سایت کلیک کنید</a></div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>