@model ViewModels.BlogListViewModel
@{
    ViewBag.Title = Model.BlogGroup.Title;
    Layout = "~/Views/Shared/FrontEnd/_FronEndLayout.cshtml";
	ViewBag.Canonical = "https://www.mashadcarpet.com/blog";
}

<div class="breadcrumb_section bg_gray page-title-mini">
	<div class="container">
		<!-- STRART CONTAINER -->
		<div class="row align-items-center">
			<div class="col-md-6">
				<div class="page-title">
					<h1>@Model.BlogGroup.Title</h1>
				</div>
			</div>
			<div class="col-md-6">
				<ol class="breadcrumb justify-content-md-end">
					<li class="breadcrumb-item"><a href="/">خانه</a></li>
					<li class="breadcrumb-item active">@Model.BlogGroup.Title</li>
				</ol>
			</div>
		</div>
	</div>
</div>

 
<div class="main_content">

	<div class="section">
		<div class="container">
			<div class="row">
				@foreach (var blog in Model.Blogs)
				{
					
				<div class="col-lg-4 col-md-6">
					<div class="blog_post blog_style2 box_shadow1">
						<div class="blog_img">
							<a href="/blog/post/@blog.UrlParam">
								<img src="@blog.ImageUrl" alt="@blog.Title" >
							</a>
						</div>
						<div class="blog_content bg-white">
							<div class="blog_text">
								<h5 class="blog_title"><a href="/blog/post/@blog.UrlParam">@blog.Title</a></h5>
								<ul class="list_none blog_meta">
									<li><a href="#"><i class="ti-calendar"></i> @blog.CreationDateStr</a></li>
									<li><a href="#"><i class="ti-comments"></i> @blog.CommentCount نظر</a></li>
								</ul>
								<p>@blog.Summery</p>
							</div>
						</div>
					</div>
				</div>
				}
		 
			</div>
			<div class="row">
				<div class="col-12 mt-2 mt-md-4">
					<ul class="pagination pagination_style1 justify-content-center">
						<li class="page-item disabled"><a class="page-link" href="#" tabindex="-1"><i class="linearicons-arrow-left"></i></a></li>
						<li class="page-item active"><a class="page-link" href="#">1</a></li>
						<li class="page-item"><a class="page-link" href="#">2</a></li>
						<li class="page-item"><a class="page-link" href="#">3</a></li>
						<li class="page-item"><a class="page-link" href="#"><i class="linearicons-arrow-right"></i></a></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	@Html.Partial("FrontEnd/_NewsLetterPartial")
</div>