@model ViewModels.BlogListViewModel
@{
    ViewBag.Title = "وبلاگ";
    Layout = "~/Views/Shared/FrontEnd/_FronEndLayout.cshtml";
	ViewBag.Canonical = "https://khoshdast.ir/blog";
}

 

<div class="main_content  bg-gray-list">
	<div class="section">
		<div class="container  container-custom2">

			<div class="row">
				<div class="col-md-12">
					<div class="khoshdast-breadcramp">
						<ol class="breadcrumb ">
							<li class="breadcrumb-item"><a href="/">صفحه اصلی</a></li>
						</ol>

						<h1>نتیجه پرداخت</h1>
						<p class="clearfix"></p>
					</div>
				</div>
			</div>
		</div>

		<div class="container container-white">
			<div class="row blog-list">
				@foreach (var blog in Model.Blogs)
				{
					<div class="col-lg-4 col-md-6 grid_item">
						<div class="blog_post blog_style2 box_shadow1">
							<div class="blog_img">
								<a href="/blog/post/@blog.UrlParam">
									<img src="@blog.ImageUrl" alt="@blog.Title">
								</a>
							</div>
							<div class="blog_content bg-white">
								<div class="blog_text">
									<h2 class="blog_title"><a href="/blog/post/@blog.UrlParam">@blog.Title</a>
									</h2>
									<ul class="list_none blog_meta">
										<li><a href="#"><i class="ti-calendar"></i> @blog.CreationDateStr</a></li>
										<li><a href="#"><i class="ti-eye"></i> @blog.Visit</a></li>
									</ul>
									<p>
										@blog.Summery
									</p>
								</div>
							</div>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</div>

